<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Flight num</th>
      <th>Date</th>
      <th>From</th>
      <th>To</th>
      <th>airplane_id</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.flight_num %></td>
        <td><%= flight.date %></td>
        <td><%= flight.from %></td>
        <td><%= flight.to %></td>
        <td><%= flight.airplane_id %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>

<div>
  <h1>All Flights</h1>
  <div>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Flight</th>
          <th>From > To</th>
          <th>Plane</th>
          <th>Seats</th>
        </tr>
      </thead>

      <tbody>
        <% @flights.each do |flight| %>
          <tr>
            <td><%= flight.date.strftime("%d-%m-%y") %></td>
            <td><%= link_to flight.flight_num, flight %></td>
            <td><%= flight.from %> > <%= flight.to %></td>
            <td><%= flight.airplane_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
